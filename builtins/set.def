static void
shopt_error (char const *s)
{
  builtin_error (_("%s: invalid shell option name"), s);
}

static int
change_shopts (option_value_t new_value, WORD_LIST *list, int quiet)
{
  WORD_LIST *l;
  int rval = EXECUTION_SUCCESS;

  for (l = list; l; l = l->next)
    {
      optset_result_t r = set_opt_value (find_option (l->word->word), Whence (shopt), new_value);
      if (res_to_ex (r) != EXECUTION_SUCCESS)
	{
	  shopt_error (l->word->word);
	  rval = EXECUTION_FAILURE;
	}
    }

  /* Don't set $BASHOPTS here if it hasn't already been initialized */
  if (find_variable ("BASHOPTS") != NULL)
    set_bashopts ();
  return (rval);
}

static void
print_shopt (char *name, int val, int flags)
{
  if (flags & PFLAG)
    printf ("shopt %s %s\n", val ? "-s" : "-u", name);
  else
    printf (OPTFMT, name, val ? on : off);
}

/* List the values of all or any of the ‘shopt’ options.  Returns 0 if
   all were listed or all variables queried were on; 1 otherwise. */
static int
list_shopts (WORD_LIST *list, int flags)
{
  WORD_LIST *l;
  int val, rval;

  if (list == 0)
    {
      struct opt_def_s const *d;

      for (d = opt_defs; d->name; d++)
	{
	  struct opt_def_s const *d = &opt_defs[i];
	  if (d->hide_shopt)
	    continue;
	  if (d->name == no_long_name)
	    continue;
	  val = get_opt_value (d, Whence (shopt));
	  if ((flags & QFLAG) == 0)
	    print_shopt (d->name, val, flags);
	}
      return (sh_chkwrite (EXECUTION_SUCCESS));
    }

  for (l = list, rval = EXECUTION_SUCCESS; l; l = l->next)
    {
      struct opt_def_s const *d = find_option (l->word->word);
      if (!d)
	{
	  shopt_error (l->word->word);
	  rval = EXECUTION_FAILURE;
	  continue;
	}
      val = get_opt_value (d, Whence (shopt));
      if (val == 0)
	rval = EXECUTION_FAILURE;
      if ((flags & QFLAG) == 0)
	print_shopt (l->word->word, val, flags);
    }

  return (sh_chkwrite (rval));
}

static int
list_some_shopts (int new_value, int flags)
{
  int val, i;
  struct opt_def_s const *d;

  for (d = opt_defs; d->name; d++)
    {
      if (d->hide_shopt)
	continue;
      val = get_opt_value (d, Whence (shopt));
      if (((flags & QFLAG) == 0) && new_value == val)
	print_shopt (d->name, val, flags);
    }
  return (sh_chkwrite (EXECUTION_SUCCESS));
}

static int
list_shopt_o_options (WORD_LIST *list, int flags)
{
  WORD_LIST *l;

  if (list == NULL)
    {
      if ((flags & QFLAG) == 0)
	list_minus_o_opts (-1, (flags & PFLAG));
      return (sh_chkwrite (EXECUTION_SUCCESS));
    }

  int rval = EXECUTION_SUCCESS;
  for (l = list; l; l = l->next)
    {
      option_value_t val = get_opt_value (find_option (l->word->word), Whence (shopt));
      if (val == FLAG_ERROR)
	{
	  sh_invalidoptname (l->word->word);
	  rval = EXECUTION_FAILURE;
	  continue;
	}
      if (val == 0)
	rval = EXECUTION_FAILURE;
      if ((flags & QFLAG) == 0)
	{
	  if (flags & PFLAG)
	    printf ("set %co %s\n", bool_to_flag (val), l->word->word);
	  else
	    printf (OPTFMT, l->word->word, val ? on : off);
	}
    }
  return (sh_chkwrite (rval));
}

static int
list_some_o_options (int new_value, int flags)
{
  if ((flags & QFLAG) == 0)
    list_minus_o_opts (new_value, (flags & PFLAG));
  return (sh_chkwrite (EXECUTION_SUCCESS));
}

static int
set_shopt_o_options (int new_value, WORD_LIST *list, int quiet)
{
  WORD_LIST *l;
  int rval;

  for (l = list, rval = EXECUTION_SUCCESS; l; l = l->next)
    {
      if (set_minus_o_option (new_value, l->word->word) == EXECUTION_FAILURE)
	rval = EXECUTION_FAILURE;
    }
  set_shellopts ();
  return rval;
}

