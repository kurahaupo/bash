#define N_SHOPT_OPTIONS		(sizeof (opt_defs) / sizeof (opt_defs[0]))

static struct opt_def_s const *
find_option (char const *name)
{
  struct opt_def_s const *d;
  for (d = opt_defs; d->name; d++)
    if (d->name != no_long_name && !strcmp (name, d->name))
      return d;
  return NULL;
}

static void
shopt_error (char const *s)
{
  builtin_error (_("%s: invalid shell option name"), s);
}

int
shopt_builtin (WORD_LIST *list)
{
  int opt;
  _Bool do_set = false;
  _Bool do_unset = false;
  _Bool quiet = false;
  _Bool reusable = false;
  _Bool fake_set_o = false;

  reset_internal_getopt ();
  while ((opt = internal_getopt (list, "psuoq")) != -1)
    {
      switch (opt)
	{
	case 's':
	  do_set = true;
	  break;
	case 'u':
	  do_unset = true;
	  break;
	case 'q':
	  quiet = true;
	  break;
	case 'o':
	  fake_set_o = true;
	  break;
	case 'p':
	  reusable = true;
	  break;
	CASE_HELPOPT;
	default:
	  builtin_usage ();
	  return (EX_USAGE);
	}
    }
  list = loptend;

  _Bool do_update = true;
  _Bool use_value = !do_unset;

  if (do_set)
    if (do_unset)
      {
	builtin_error (_("cannot set and unset shell options simultaneously"));
	return (EXECUTION_FAILURE);
      }
    else
      use_value = true;
  else
    if (do_unset)
      use_value = false;
    else
      do_update = false;


  if (list == NULL)
    {
      if (!quiet)
	{
	  unsigned int value_mask = do_update ? 1 << !use_value : 0;
	  optset_whence_t selection = fake_set_o ? Whence (set_o) : Whence (shopt);
	  opt_def_t *oo = fake_set_o ? opt_defs1 : opt_defs2;
	  optset_whence_t display = reusable ? fake_set_o ? Whence (set_o) : Whence (shopt) : Whence (any);
	  /*
	  if (fake_set_o)
	    if (do_update)
	      // shopt {-os/-ou}
	    else
	      // shopt -o (... and neither -s nor -u)
	  else
	    if (do_update)
	      // shopt -[su] (no args)
	    else
	      // shopt with no args or options
	  */
	  list_all_options2 (oo, selection, value_mask, display);
	}
      return (sh_chkwrite (EXECUTION_SUCCESS));
    }
  else
    {
      if (fake_set_o)
	{
	  /* shopt -o ARGS */
	  if (do_update)
	    {
	      /* shopt [-os/-ou] ARGS... */
	      int rval = EXECUTION_SUCCESS;
	      for (; list; list = list->next)
		{
		  char const * option_name = list->word->word;
		  struct opt_def_s const *d = find_option (option_name);
		  if (!d)
		    {
		      sh_invalidoptname (option_name);
		      rval = EX_USAGE;
		      continue;
		    }
		  optset_result_t r = set_opt_value (d, Whence (set_o), flag_to_bool (use_value));
		  if (! ResultGood (r))
		    {
		      sh_invalidoptname (option_name);
		      rval = EXECUTION_FAILURE;
		      continue;
		    }
		}
	      set_shellopts ();
	      return rval;
	    }
	  else
	    {
	      /* shopt -o ARGS */
	      int rval = EXECUTION_SUCCESS;
	      for (; list; list = list->next)
		{
		  opt_def_t const *d = find_option (list->word->word);
		  if (!d)
		    {
		      sh_invalidoptname (list->word->word);
		      rval = EXECUTION_FAILURE;
		      continue;
		    }
		  if (rval == EXECUTION_SUCCESS)
		    {
		      option_value_t val = get_opt_value (d, Whence (shopt));
		      if (val == 0)
			rval = 1;	/* looks like EXECUTION_FAILURE but actually means OFF */
		    }
		  if (!quiet)
		    show_one_option (d,
				     Whence (shopt),
				     reusable ? Whence (shopt)
					      : Whence (any));
		}
	      return (sh_chkwrite (rval));
	    }
	}
      else
	{
	  /* shopt without -o ... */
	  if (do_update)
	    {
	      /* shopt [-s/-u] ARGS */
	      int rval = EXECUTION_SUCCESS;

	      for (; list; list = list->next)
		{
		  optset_result_t r = set_opt_value (find_option (list->word->word), Whence (shopt), use_value);
		  if (res_to_ex (r) != EXECUTION_SUCCESS)
		    {
		      shopt_error (list->word->word);
		      rval = EXECUTION_FAILURE;
		    }
		}

	      /* Don't set $BASHOPTS here if it hasn't already been initialized */
	      if (find_variable ("BASHOPTS") != NULL)
		set_bashopts ();
	      return (rval);
	    }
	  else
	    {
	      /* shopt ARGS */
	      int rval = EXECUTION_SUCCESS;

	      for (; list; list = list->next)
		{
		  struct opt_def_s const *d = find_option (list->word->word);
		  if (!d)
		    {
		      shopt_error (list->word->word);
		      rval = EXECUTION_FAILURE;
		      continue;
		    }
		  if (rval == EXECUTION_SUCCESS)
		    {
		      option_value_t val = get_opt_value (d, Whence (shopt));
		      if (val == 0)
			rval = 1;	/* looks like EXECUTION_FAILURE but actually means OFF */
		    }
		  if (!quiet)
		    show_one_option (d, Whence (shopt), reusable ? Whence (shopt) : Whence (any));
		}

	      return (sh_chkwrite (rval));
	    }
	}
    }
}

